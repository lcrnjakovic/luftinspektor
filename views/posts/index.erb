<table class="table">
  <thead>
    <tr>
      <td>Title</td>
      <td>Created at</td>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><a href="/posts/<%= post.slug %>"><%= post.title %></a></td>
        <td><%= post.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
